@using Microsoft.EntityFrameworkCore
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model Languages.UI.MVC.Models.CreateIdeViewModel

@{
    ViewBag.Title = @Model.Name;
    Layout = "_Layout";
}
<div class="card">
    <div class="card-body">
        <h2>Edit @Model.Name</h2>
        <p>
            Change existing values, add or delete supported languages.
        </p>
        <form asp-area="" asp-controller="Ide" asp-action="Edit">
            <partial name="_IdeForm"/>

            @if (Model.Languages.Count > 0)
            {
                <h3>Supported Languages</h3>
                @for (int i = 0; i < Model.Languages.Count; i++)
                {
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <input asp-for="Languages[i]" value="@Model.Languages[i].Name" class="form-control" disabled="disabled"/>
                        </div>
                        <div class="col-sm-2">
                            <button class="btn btn-danger" disabled="disabled">Remove</button>
                        </div>
                    </div>
                }
            }
            <a asp-action="Index" class="btn btn-danger md-2 mt-2">Cancel</a>
            <button type="submit" disabled="disabled" class="btn btn-primary md-2 mt-2">Save</button>
        </form>
    </div>
</div>